<!-- note that for some reason we don't need to go up a dir... ../ -->
<% layout("layouts/boilerplate") %>

<div class="mb-3" id="map" style="width: 100%; height: 500px"></div>
<h1 class="mb-3">All Campgrounds</h1>
<% for (let camp of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (camp.images.length) { %>
      <img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
      <% } else { %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/ddlgml3yp/image/upload/v1615770701/YelpCamp/fomsfxpe7jm48vqqjdw3.jpg"
        alt=""
      />
      <% } %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %> </small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"
          >View <%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds =  {
      features: <%- JSON.stringify(campgrounds) %>
     }
</script>
<script src="/javascripts/clustermap.js"></script>

