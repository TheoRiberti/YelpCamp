<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <!-- offsets 3 cols, centering it -->
  <div class="col-6 offset-3">
    <!-- novalidate as using our own js and btstp to validate -->
    <form class="validated-form" action="/campgrounds" method="POST" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <!-- the name using sq.br to only to group things together -->
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <!-- optional feature from btstrap -->
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&dollar;</span>
          <input
            id="price"
            type="text"
            class="form-control"
            name="campground[price]"
            placeholder="0.00"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
