<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <!-- offsets 3 cols, centering it -->
  <div class="col-6 offset-3">
    <!-- novalidate as using our own js and btstp to validate -->
    <form
      class="validated-form"
      action="/campgrounds"
      method="POST"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <!-- optional feature from btstrap -->
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div> -->
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&dollar;</span>
          <input
            id="price"
            type="text"
            class="form-control"
            name="campground[price]"
            placeholder="0.00"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-4">
        <label for="" class="mb-2">Upload images</label>
        <div class="input-group">
          <input
            type="file"
            name="image"
            class="form-control"
            id="addimages"
            multiple
          />
          <label class="input-group-text" for="addimage">Upload</label>
        </div>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-success">Create Campground</button>
      </div>
  </div>
</div>
